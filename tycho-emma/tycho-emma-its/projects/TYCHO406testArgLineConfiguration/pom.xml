<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>TYCHO406emmaAutomation</groupId>
	<artifactId>parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<packaging>pom</packaging>

	<!--<properties> -->
	<!--<tycho-version>0.8.0-SNAPSHOT</tycho-version> -->
	<!--</properties> -->

	<modules>
		<module>bundle</module>
		<module>bundle.test</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<frameworkExtensions>
						<frameworkExtension>
							<groupId>org.eclemma.runtime</groupId>
							<artifactId>org.eclemma.runtime.equinox</artifactId>
							<version>1.1.0.200908261008</version>
						</frameworkExtension>
					</frameworkExtensions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-emma-coverage-plugin</artifactId>
				<version>0.12.0-SNAPSHOT</version>
				<executions>
					<execution>
						<goals>
							<goal>prepare-emma</goal>
						</goals>
						<phase>pre-integration-test</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>helios</id>
			<url>http://download.eclipse.org/releases/helios</url>
			<layout>p2</layout>
		</repository>
	</repositories>
</project>
